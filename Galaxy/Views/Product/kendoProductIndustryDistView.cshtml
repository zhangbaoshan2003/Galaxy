
@(Html.Kendo().Grid<Galaxy.BAL.ViewModel.PorductHoldingViewModel>()
        .Name("productIndustryDistGrid")
        .Columns(columns =>
        {
            columns.Bound(c => c.IndustryName).Title("名称");
            columns.Bound(c => c.PropotionOfTotalAssets).Title("占比").Format("{0:p2}");
            columns.Bound(c => c.PctChangeCompareToPrev).Title("较上期").Format("{0:p2}");
        })
        .DataSource(dataSource => dataSource
            .Ajax()
                                .Read(read => read.Action("GetIndustryDistView", "Product", new { productId = @ViewBag.ProductId }))
        )
)
